<main>
     <div class="form">
        <form action = "/posts/create" method="POST" enctype="multipart/form-data">
            <div class="fieldset">
            <fieldset>
                <h3>Post Videos</h3>
                <label for="posttitle">Post Title:</label>
                <br>
                <input name="title" type="text" id="posttitle" placeholder="Post Title">
                <br>
                <br>
                <label for="postdesc">Post Description:</label>
                <br>
                <input name="description" type="text" id="postdesc" placeholder="Post Description">
                <br>
                <br>
                <label for="postvideo">Upload</label>
                <br>
                <input name="uploadVideo" type="file" id="postvideo" accept="video/*">
                <input type ="checkbox" id="acceptUsePolicy" required>
                <label for="acceptUsePolicy">I accept the Acceptable Use Policy</label>
                <br>
                <input type ="submit" value="Submit Video">
            </fieldset>
            </div>
        </form>
     </div>
 </main>
